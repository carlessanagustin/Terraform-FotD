##############################################
# Function: timeadd
##############################################
##############################################
# Variables
##############################################

variable "date" {
  default = "1970-01-01T00:00:00Z"
}

variable "add" {
  default = "1h"
}


##############################################
# Resources
##############################################

##############################################
# Outputs
##############################################
output "1_timeadd_basic" {
  value = "${timeadd(var.date, var.add)}"
}