##############################################
# Function: sha1, sha256, sha512
##############################################
##############################################
# Variables
##############################################
variable "string" {
  default = "So long, and thanks for all the fish!"
}

##############################################
# Resources
##############################################
##############################################
# Outputs
##############################################
output "sha1_output" {
  value = "${sha1(var.string)}"
}

output "sha256_output" {
  value = "${sha256(var.string)}"
}
output "sha512_output" {
  value = "${sha512(var.string)}"
}
